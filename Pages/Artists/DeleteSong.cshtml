@page "{artistId}/{albumId}/{songId}"
@model MusicApp.Pages.Songs.DeleteSongModel
@{
    ViewData["Title"] = "Delete Song";
}

<h1>Delete Song</h1>

<h3>Are you sure you want to delete this song?</h3>
<div>
    <h4>@Model.Song.title</h4>
</div>

<form method="post">
    <input type="hidden" asp-for="Song.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Artists/Details" asp-route-id="@Model.ArtistId" class="btn btn-secondary">Cancel</a>
</form>

