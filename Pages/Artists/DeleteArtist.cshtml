@page "{id}"
@model MusicApp.Pages.Artists.DeleteArtistModel
@{
    ViewData["Title"] = "Delete Artist";
}

<h1>Delete Artist</h1>

<h3>Are you sure you want to delete this artist?</h3>
<div>
    <h4>@Model.Artist.name</h4>
</div>

<form method="post">
    <input type="hidden" asp-for="Artist.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Artists/Index" class="btn btn-secondary">Cancel</a>
</form>
