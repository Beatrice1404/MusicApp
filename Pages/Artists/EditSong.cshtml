@page "{artistId}/{albumId}/{songId}"
@model MusicApp.Pages.Songs.EditSongModel
@{
    ViewData["Title"] = "Edit Song";
}

<h1>Edit Song</h1>

<form method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="@Model.Song.title" />
    </div>
    <div class="form-group">
        <label for="duration">Duration (in seconds)</label>
        <input type="number" class="form-control" id="duration" name="duration" value="@Model.Song.length" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
