@page "{id}"
@model MusicApp.Pages.Artists.EditArtistModel
@{
    ViewData["Title"] = "Edit Artist";
}

<h1>Edit Artist</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="@Model.Artist.name" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
