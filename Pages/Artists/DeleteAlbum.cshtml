@page "{id}"
@model MusicApp.Pages.Artists.DeleteAlbumModel
@{
    ViewData["Title"] = "Delete Album";
}

<h1>Delete Album</h1>

<h3>Are you sure you want to delete this album?</h3>
<div>
    <h4>@Model.Album.title</h4>
    <p>@Model.Album.description</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Album.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Albums" asp-route-id="@Model.ArtistId" class="btn btn-secondary">Cancel</a>
</form>
