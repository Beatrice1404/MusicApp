@page "{id}"
@model MusicApp.Pages.Artists.DeleteAlbumModel
@{
    ViewData["Title"] = "Delete Album";
}

<h1>Delete Album</h1>

<form method="post">
    <input type="hidden" asp-for="Album.Id" />

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" asp-for="Album.title" readonly />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
